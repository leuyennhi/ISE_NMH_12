<Window x:Class="HotelApp.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Management" Height="700" Width="1300" FontSize="14"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="pack://siteoforigin:,,,/Resources/screen.jpg"/>
    </Window.Background>
    <StackPanel Margin="94" HorizontalAlignment="Center">
        <Label Content="Đăng nhập" Foreground="White" HorizontalAlignment="Center" FontSize="25"/>
        <Separator></Separator>
        <Label Content="Username:" Foreground="White"/>
        <TextBox Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Label Content="Password:" Foreground="White"/>
        <PasswordBox Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Button Name="btnLogin" Content="Đăng nhập" Margin="50 50" Background="#545d6a" Foreground="White" FontSize="18"/>
        <Button x:Name="btnForget" Content="Quên mật khẩu?" Margin="50 0" Background="#545d6a" Foreground="White" FontSize="18"/>
    </StackPanel>

</Window>
